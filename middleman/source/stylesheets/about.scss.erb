section.title {
  h1 {
    margin-top: 0;
    font-size: 3em;
    font-weight: normal;

    @media (min-width: 768px) {
      font-size: 3.6em;
    }
  }
}

section.podfile {
  h4 {
    margin-left: 1.8em;
    color: #D2C5C1;
  }

  .row {
    padding: 0;
  }

  .line-numbers-border {
    background: #D2C5C1;
    margin-left: 1.7em;
    position: absolute;
    height: 100%;
    width: 1px;
  }

  pre {
    border: none;
    overflow: auto;
    white-space: pre;
    word-spacing: normal;
    word-break: normal;
    word-wrap: normal;
  }

  pre .line-numbers {
    color: #D2C5C1;
    display: block;
    float: left;
    margin: 0 1em 0 -1em;
    text-align: right;
  }

  pre .line-numbers span {
    display: block;
    padding: 0 .5em 0 1em;
  }
}

section.access {
  background: #380200;
  color: #F6F6F6;
  position: relative;

  .image {
    background: url(<%= asset_data_uri "access.png" %>) no-repeat left top;
    background-size: 412px 350px;
    width: 412px;
    height: 350px;
    position: absolute;
    top: -60px;
    opacity: 0.8;
  }
}

section.integration {
  background: #838383;
  color: #F6F6F6;
  position: relative;

  .image {
    background: url(<%= asset_data_uri "xcodeworkspace.png" %>) no-repeat right 1.4em;
    background-size: 1000px 384px;
    width: 1170px;
    height: 384px;
    position: absolute;
    top: 0;
  }

  @media (min-width: 992px) {
    h3 {
      padding-bottom: 1em;
    }

    p {
      padding-bottom: 1.4em;
    }
  }
}

section.developers {
  background: #FFFFFF;
  position: relative;

  .image {
    background: url(<%= asset_data_uri "dots.png" %>) no-repeat left top;
    background-size: 805px 100%;
    width: 805px;
    height: 100%;
    position: absolute;
    top: 0;
  }

  @media (min-width: 992px) {
    h3 {
      padding-top: 2.8em;
    }
  }
}

section.getting-it {
  background: #838383;
  color: #F6F6F6;
  text-align: center;

  p {
    text-align: left;
  }

  .terminal p {
    font-family: "Menlo", "Courier", "Helvetica Neue", "Arial";
    font-size: .8em;
  }

  .btn {
    background: #4E92E0;
    color: #FFF;
    font-size: .9em;
    padding: .5em;
    line-height: 1.99em;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    -webkit-transition: background 0.3s ease-in-out;
    -moz-transition: background 0.3s ease-in-out;
    -o-transition: background 0.3s ease-in-out;
    transition: background 0.3s ease-in-out;

    .circle-arrow-down {
      background: url(<%= asset_data_uri "circle-arrow-down.svg" %>) no-repeat 0 0;
      background-size: 32px 32px;
      height: 32px;
      width: 32px;
      margin-left: .6em;
      display: inline-block;
      vertical-align: bottom;
    }

    &:hover {
      background: #3885dc;
    }
  }

  @media (min-width: 992px) {
    article.row {
      padding-bottom: 0;
    }

    h2 {
      margin-bottom: 1em;
    }

    .cocoapods-app,
    .terminal {
      padding: 2em 4.5em 0;
      height: 320px;
    }

    .cocoapods-app {
      background: url(<%= asset_data_uri "cocoapods-app.png" %>) no-repeat 50% top;
      background-size: 452px 320px;
    }

    .terminal {
      background: url(<%= asset_data_uri "unix.png" %>) no-repeat 50% top;
      background-size: 452px 320px;
    }
  }

  @media (min-width: 768px) {
    .terminal p {
      margin-bottom: 10.7em;
    }

    p {
      font-size: .9em;
    }
  }
}

section.developers h3,
section.overview h3,
section.volunteer h2,
section.community h2 {
  color: #F61433;
}

section.getting-it h2,
section.volunteer h2,
section.community h2 {
  text-align: center;
  margin-top: 0;
}

.dev-team {
  margin: 16px 0;
  text-align: center;

  .card {
    background-color: white;
    padding: 200px 16px 16px;
    position: relative;

    .background {
      background-color: grey;
      background-size: cover;
      background-position: center center;
      width: 100%;
      height: 160px;
      position: absolute;
      top: 0;
      left: 0;
    }

    img.twitter_avatar {
      top: 80px;
      width: 136px;
      height: 136px;
      position: absolute;
      left: 50%;
      margin-left: -68px;
      border: 4px solid white;
      border-radius: 10%;
      -moz-border-radius: 10%;
      -webkit-border-radius: 10%;
    }
  }
}

.sub-project {
  position: relative;
  margin: 16px 0;
  padding: 16px;
  background: white;

  h2 {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;
    height: 30%;
    font-size: 4em;
    color: white;
    -webkit-transition: opacity 0.3s ease-in-out;
    -moz-transition: opacity 0.3s ease-in-out;
    -o-transition: opacity 0.3s ease-in-out;
    transition: opacity 0.3s ease-in-out;

    &:hover {
      opacity: 0;
    }
  }

  ul {
    margin-left: 0;
    padding-left: 0;
    text-align: center;
  }

  li {
    list-style-type: none;
    padding-left: 2px;
    padding-top: 2px;
    display: inline-block;
  }
}

