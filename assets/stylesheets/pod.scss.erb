nav li, .sideline li {
  list-style: none;
  padding-left: 0;
}

nav {
  height: 32px;

  li {
    float: left;

    &.metadata {
      float:right;
      padding-left:28px;
      margin-right:20px;
      background-position: top left;
    }
  }
}

p code {
  white-space: normal;
  word-break: break-all;
}

li.metadata.initial-commit {
  background: no-repeat url(<%= asset '/images/first_commit.svg' %>);
}

li.metadata.stars {
  background: no-repeat url(<%= asset '/images/stars.svg' %>);
}

li.metadata.forks {
  background: no-repeat url(<%= asset '/images/forks.svg' %>);
}

li.metadata.watchers {
  background: no-repeat url(<%= asset '/images/watchers.svg' %>);
}

li.metadata.files {
  background: no-repeat url(<%= asset '/images/files.svg' %>);
  margin-right:0;
}

li.github-link {
  background: no-repeat url(<%= asset '/images/github-cat.svg' %>);
  padding-left:36px;
  height:32px;
  display:block;
}

li.twitter {
  background: no-repeat url(<%= asset '/images/twitter.svg' %>);
  padding-left:28px;
}

.pod-metadata, .sideline, .readme-content {
  background-color:white;
}

#pod-page .readme-content {
  border-right: 2px solid whitesmoke;
}

.pod_result .readme-content {
  border-right: 2px solid $faded-background-color;
}

#pod-page h1.inline-headline {
  display: none !important;
}

@media (max-width: 767px){
  .readme-content {
    border-right: none !important;
  }
}

.sideline {
  ul {
    padding-left: 0;
  }
   tr td:last-child {
    text-align:right;
  }
  sub {
    text-align:right;
    display:block;
    margin-top:20px;
  }
  table {
    width: 100%;
    &.inset td {
      padding-left: 8px;
    }
  }
  > .btn, > div > .btn {
    color: #565656;
    background-color: $background-color;
    margin:4px auto;
    display:block;
  }

  .close-expanded a {
    font-size: 1.3em;
    color: white;
    padding: 0.5em 1em;
    background-color: $faded-background-color;
    margin-bottom: 20px;
    float:right;
    margin-top:-8px;

    &:hover {
      background-color: $highlight-color;
      text-decoration: none;
    }
  }
}

#pod-page .close-expanded a {
  display: none;
}

.pod-metadata h1 {
  color: $highlight-color;
  font-weight:normal;
  margin: 0;
  font-size: 3em;
  word-break: break-all;

  span {
    word-break: normal;
  }
}

#results_container ol.results > li.is-expanded {
  border: none;
}

.is-expanded .readme-content > .nav-tabs li > a {
  padding-top: 8px;
  font-size:16px;
}

.inline-headline h1 {
  margin-top:12px;
  font-size: 5em;
  word-break: break-all;
  line-height: 72px;
  span {
    word-break: normal;
  }
}

.inline-headline h1 span {
  color: $faded-background-color;
}

#pod-page .inline-headline {
  display:none;
}

.pod_result {
  background-color:white;
}

.pod_result ul.screenshots {
  padding:0;
}

.pod_result ul.screenshots img {
  width: 100%;
}

.pod_result .pod-metadata h1 span {
  color: $faded-background-color;
}

.modal-dialog p {
  margin:18px 0;
}
