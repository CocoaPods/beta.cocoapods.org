$highlight-font: "GT Walsheim", "gt_walsheim_regular", "Avant Garde Gothic ITCW01Dm", "Avant Garde", "Helvetica Neue", "Arial";
$body: "Helvetica Neue", "Arial", san-serif;
$code: "Monaco", "Menlo", "Consolas", "Courier New", monospace;
$highlight-color: #ED0015;
$highlight-dark-color: #A90010;
$darker-color: #C6B7B2;
$darker-dark-color: #A8A8A8;
$faded-background-color: #d1c4c0;
$background-color: #F2F2F2;
$base-color: #380200;
$alt-link-color: #B7233F;
$warning-color: #B80E3D;

#headline {
  height:320px;
  padding:0;
}

#headline > div {
  position: relative;
  height:100%;
}

#headline > div > h1 {
  bottom: 20px;
  left: 0px;
  font-size: 72px;
  font-weight:normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 76px;
  line-height: 63px;
  color: $highlight-color;
  position: absolute;
  padding: 0;
  margin-bottom: 0;
  width:100%;
}

h1 span {
  color: whitesmoke;
}

@media (max-width:768px){
  #headline {
    height:120px;
  }
  #headline > div > h1 {
    font-size:32px;
    text-align:center;
  }
}

.quality-content {
  padding-bottom: 20px;
  padding-top: 15px;
  background: #FFF;

  .score {
    text-align: center;
    background-color: #f5f5f5;
  }
}

.readme-content {
  border-right: 2px solid black;
  padding-bottom: 20px;
  padding-top: 20px;
  padding-left: 30px;
  padding-right: 30px;
  overflow-x: auto;

  > nav {
    background-color: whitesmoke;
    height: 48px;
    margin: 0 -30px -30px;
    margin-bottom: 15px;
    padding: 12px 15px 15px;

    ul {
      margin: 0;
      padding-left: 0;

      li {
        display: inline-block;
        margin-right: 12px;
      }

      .quality_indicator {
        padding-right:12px;
      }
    }
  }

  > .deprecated {
    background-color: whitesmoke;
    height: 48px;
    margin: 0 -30px -30px;
    margin-bottom: 15px;
    padding: 12px 15px 15px;
    text-align: center;
  }

  > .nav-tabs {
    height: 36px;
    display:inline-block;

    margin: 0 -30px;
    margin-bottom: 15px;
    padding: 0 0 0 12px;
    border-bottom: none;
    background-color: $background-color;

    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;

    li:first-child {
      border-right: 4px solid white;
    }

    li > a:hover {
      background-color: transparent;
      border: none;
      margin-right: 2px;
    }

    li > a {
      background-color: transparent;
      border: none;
      padding: 5px 15px;
      color: #7F7F7F;
    }

    li.active a {
      color:black;
      text-decoration:underline;
      background-color: transparent;
      border: none;
    }
  }

  ul.attribution {
    clear: both;
    margin-bottom: 14px;
    margin-top: 0;
    padding-left: 0;

    li {
      display: inline-block;
      margin-right: 12px;
    }
  }

  img {
    max-width:100%;
  }


  h1, h2, h3, h4, h5, h6 {
    font-family: $highlight-font;
    padding: 0;
    -webkit-font-smoothing: subpixel-antialiased;
    margin-top:1em;
    margin-bottom:0.4em;
  }

  h1 {
    border-left: 4px $highlight-color solid;
    padding-left: 20px;
    margin-left:-30px;
    font-size: 48px;
    line-height: 52px;
  }

  h2 {
    font-size: 40px;
    line-height: 52px;
  }

  h3 {
    color: $highlight-dark-color;
    font-size: 32px;
    line-height: 41px;
  }

  h4 {
    font-size: 24px;
    line-height: 32px;
  }

  h5 {
    font-size: 18px;
    line-height: 24px;
  }

  h6 {
    font-size: 14px;
    line-height: 19px;
  }


  ul, ol {
    padding-left: 30px;
  }

  hr {
    background-color: #ccc;
    border:0;
    height: 4px;
    padding: 0;
  }

  p {
    font-size:16px;
    line-height:20px;
  }

  h1 img, h2 img, h3 img {
    margin-bottom: 4px;
  }

dl {
  padding: 0;
  dt {
    font-size: 14px;
    font-weight: bold;
    font-style: italic;
    padding: 0;
    margin: 15px 0 5px;
    &:first-child {
      padding: 0;
    }
    > {
      :first-child {
        margin-top: 0;
      }
      :last-child {
        margin-bottom: 0;
      }
    }
  }
  dd {
    margin: 0 0 15px;
    padding: 0 15px;
    > {
      :first-child {
        margin-top: 0;
      }
      :last-child {
        margin-bottom: 0;
      }
    }
  }
}

  blockquote {
    border-left: 4px solid #ddd;
    padding: 0 15px;
    color: #777;
    > {
      :first-child {
        margin-top: 0;
      }
      :last-child {
        margin-bottom: 0;
      }
    }
  }
  table {
    border-collapse: collapse;
    border-spacing: 0;
    font-size: 100%;
    font: inherit;
    width:100%;

    th {
      font-weight: bold;
      border: 1px solid $darker-color;
      background-color: $darker-color;
      padding: 6px 13px;
    }
    td {
      border: 1px solid #ccc;
      padding: 6px 13px;
    }
    tr {
      border-top: 1px solid #ccc;
      background-color: #fff;
    }
    trimg {
      max-width: 100%;
    }
  }

  code, tt {
    margin: 0 2px;
    padding: 0 5px;
  }

  pre > code {
    margin: 0;
    padding: 0;
    white-space: pre;
  }

  pre {
    background-color: #F2F2F2;
    border:0;
    border-left: 2px solid $highlight-dark-color;
    font-size: 13px;
    line-height: 19px;
    overflow: auto;
    padding: 6px 10px;
  }

  .poetry pre {
    font-family: Georgia, Garamond, serif !important;
    font-style: italic;
    font-size: 110% !important;
    line-height: 1.6em;
    display: block;
    margin-left: 1em;
    code {
      font-family: Georgia, Garamond, serif !important;
      word-break: break-all;
      word-break: break-word;
      -webkit-hyphens: auto;
      -moz-hyphens: auto;
      hyphens: auto;
      white-space: pre-wrap;
    }
  }

  sup, sub, a.footnote {
    font-size: 1.4ex;
    height: 0;
    line-height: 1;
    vertical-align: super;
    position: relative;
  }

  sub {
    vertical-align: sub;
    top: -1px;
  }

  em {
    font-style:normal;
    color:#818181;
  }

